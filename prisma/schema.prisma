generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// User & Authentication
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String?
  name          String?
  image         String?
  emailVerified DateTime?
  role          String    @default("USER")

  // Team relation
  teamId        String?
  team          Team?     @relation(fields: [teamId], references: [id])
  ownedTeams    Team[]    @relation("TeamOwner")

  // User content
  conversations Conversation[]
  agents        Agent[]
  apiKeys       ApiKey[]

  // Auth
  accounts      Account[]
  sessions      Session[]

  // Usage tracking
  usageRecords  UsageRecord[]

  // Provider API keys
  providerKeys  UserProviderKey[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// Team & Organization
// ============================================

model Team {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  image       String?

  // Plan & Billing
  plan        String   @default("FREE")
  stripeCustomerId    String?
  stripeSubscriptionId String?

  // Owner
  ownerId     String
  owner       User     @relation("TeamOwner", fields: [ownerId], references: [id])

  // Members
  members     User[]
  invitations TeamInvitation[]

  // Team content
  agents      Agent[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TeamInvitation {
  id        String   @id @default(cuid())
  email     String
  role      String   @default("USER")
  teamId    String
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@unique([email, teamId])
}

// ============================================
// Conversations & Messages
// ============================================

model Conversation {
  id        String    @id @default(cuid())
  title     String?

  // Model settings
  model     String    @default("gpt-4o")
  provider  String    @default("OPENAI")

  // Relations
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages  Message[]

  // Optional: linked agent
  agentId   String?
  agent     Agent?    @relation(fields: [agentId], references: [id])

  // Metadata
  isArchived Boolean  @default(false)
  isPinned   Boolean  @default(false)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Message {
  id             String   @id @default(cuid())
  role           String
  content        String

  // For tool calls
  toolCalls      String?
  toolResults    String?

  // Metadata
  model          String?
  tokens         Int?

  // Relations
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  createdAt      DateTime     @default(now())
}

// ============================================
// Agents
// ============================================

model Agent {
  id          String   @id @default(cuid())
  name        String
  description String?
  icon        String?

  // Configuration
  systemPrompt String
  model        String   @default("gpt-4o")
  provider     String   @default("OPENAI")
  temperature  Float    @default(0.7)
  maxTokens    Int?

  // Tools & Workflow
  tools        String   @default("[]")
  workflow     String?

  // Visibility
  isPublic     Boolean  @default(false)
  isTemplate   Boolean  @default(false)

  // Stats
  usageCount   Int      @default(0)
  rating       Float?

  // Relations
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  teamId       String?
  team         Team?    @relation(fields: [teamId], references: [id])

  conversations Conversation[]

  // Marketplace
  category     String?
  tags         String?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// ============================================
// API Keys & Usage
// ============================================

model ApiKey {
  id          String   @id @default(cuid())
  name        String
  key         String   @unique
  hashedKey   String

  // Permissions
  permissions String   @default("read,write")

  // Rate limiting
  rateLimit   Int      @default(100)

  // Usage
  lastUsedAt  DateTime?
  usageCount  Int      @default(0)

  // Relations
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Expiration
  expiresAt   DateTime?
  isRevoked   Boolean  @default(false)

  createdAt   DateTime @default(now())
}

model UsageRecord {
  id        String   @id @default(cuid())

  // What was used
  provider  String
  model     String
  type      String

  // Counts
  inputTokens  Int @default(0)
  outputTokens Int @default(0)
  totalTokens  Int @default(0)

  // Cost (in cents)
  cost      Float    @default(0)

  // Relations
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

// ============================================
// User Provider API Keys
// ============================================

model UserProviderKey {
  id        String   @id @default(cuid())

  // Provider (openai, anthropic, google, perplexity)
  provider  String

  // Encrypted API key
  encryptedKey String

  // Relations
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, provider])
}
